<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:adnroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="@color/mydark"
    tools:context="costy.tursib.MainActivity"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <Switch
        android:layout_width="wrap_content"
        android:id="@+id/color_switch"
        android:textSize="17dp"
        android:text="  Orar colorat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/list1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color_switch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
